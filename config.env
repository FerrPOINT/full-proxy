# Configuration for Krea.ai Proxy
# Update these values according to your setup

# Domain configuration
TARGET_DOMAIN=krea.ai
PROXY_DOMAIN=krea.acm-ai.ru

# SSL Certificate configuration (for Let's Encrypt)
# This email is used for SSL certificate notifications and recovery
SSL_EMAIL=krea@acm-ai.ru

# Server configuration
SERVER_IP=$(hostname -I | awk '{print $1}')

# NGINX paths
NGINX_SITES_AVAILABLE=/etc/nginx/sites-available
NGINX_SITES_ENABLED=/etc/nginx/sites-enabled
NGINX_LUA_DIR=/etc/nginx/lua

# SSL Certificate paths
SSL_CERT_PATH=/etc/letsencrypt/live/${PROXY_DOMAIN}/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/${PROXY_DOMAIN}/privkey.pem

# Backup configuration
BACKUP_DIR=/etc/nginx/backup_$(date +%Y%m%d_%H%M%S) 